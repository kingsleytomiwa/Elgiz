{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.tsx",
    ".next/types/**/*.ts",
    "../../packages/db/queries.ts",
    "../../packages/db/selects.ts"
  ],
  "exclude": ["node_modules"]
}
